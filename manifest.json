{
  "name": "Memoize",
  "version": "1.0",
  "description": "Remember and organize your thoughts while browsing",
  "permissions": ["storage", "activeTab", "declarativeContent"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["selectionListener.js"]
    }
  ],
  "manifest_version": 2
}
